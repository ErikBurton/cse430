<% if (locals.accountData) { %>
    <h1>Account Management</h1>
  
    <!-- Greet the user -->
    <h2>Welcome <%= accountData.firstname %></h2>
  
    <!-- Update Account Info link (shown to all account types) -->
    <p><a href="/account/update/<%= accountData.account_id %>">Update Account Info</a></p>
  
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <!-- Only for Employee/Admin -->
      <h3>Inventory Management</h3>
      <p><a href="/inv/management">Go to Inventory Management</a></p>
    <% } %>
  <% } %>