  <div class="login-container">
    <h2>Login</h2>
    
    <!-- Display flash message if available -->
    <% if (typeof flash !== 'undefined' && flash.length > 0) { %>
      <div class="flash-message">
        <% flash.forEach(function(message){ %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    
    <form action="/account/login" method="POST">
      <label for="email">Email:</label>
      <input type="email" id="email" name="account_email" required placeholder="Enter your email" required value="<%= locals.account_email %>">
      
      <label for="password">Password:</label>
      <input type="password" id="password" name="account_password" required placeholder="Enter your password">
      
      <button type="submit">Login</button>
    </form>
    
    <div class="signup-link">
      <p>No account? <a href="/account/register">Register</a></p>
    </div>
  </div>
