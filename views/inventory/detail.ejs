    <main>
      <h1><%= title %></h1>
      <div class="vehicle-detail-container">
        <div class="vehicle-image">
          <img class="inventory-img" src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
        </div>
        <div class="vehicle-info">
          <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
          <p><strong>Price:</strong> 
            <%= Number(vehicle.inv_price).toLocaleString('en-US', { style: 'currency', currency: 'USD' }) %>
          </p>
          <p><strong>Mileage:</strong> 
            <%= Number(vehicle.inv_miles).toLocaleString('en-US') %> miles
          </p>
          <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
        </div>
      </div>
    </main>
      
     