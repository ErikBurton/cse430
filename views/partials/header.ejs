<header id="top-header">
        <a href="/" title="Return to home page" class="siteName">CSE Motors</a>    
      
        <% if (locals.accountData) { %>
          <!-- Only show when logged in -->
          <a href="/account" title="Account Management">Welcome <%= accountData.firstname %></a>
